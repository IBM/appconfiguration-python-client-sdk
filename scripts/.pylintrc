# lint Python modules using external checkers.
[MASTER]

disable=
    logging-not-lazy,
    broad-except,
    no-self-use,
    import-outside-toplevel,
    cyclic-import,
    consider-using-with,
    super-init-not-called

[FORMAT]

# Maximum number of characters on a single line.
max-line-length=180
max-nested-blocks=7
max-branches=18
max-locals=18
min-public-methods=0
max-attributes=20
max-args=8